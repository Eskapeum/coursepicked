---
import Layout from '../../layouts/Layout.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

const post = Astro.props;
const { Content } = await render(post);
---

<Layout title={`${post.data.title} | CoursePicked`} description={post.data.description}>
  <!-- Article Header -->
  <header class="bg-gradient-to-br from-[#1E3A5F] to-[#2d4a6f] text-white py-16">
    <div class="max-w-4xl mx-auto px-4">
      <div class="flex items-center gap-3 mb-4">
        <a href="/blog" class="text-blue-200 hover:text-white transition-colors">
          <i class="fa-solid fa-arrow-left mr-2"></i>Back to Blog
        </a>
      </div>
      <div class="flex items-center gap-3 mb-4">
        <span class="bg-[#10B981] text-white text-xs px-3 py-1 rounded-full font-semibold capitalize">
          {post.data.category}
        </span>
        <span class="text-blue-200 text-sm">
          <i class="fa-regular fa-clock mr-1"></i>{post.data.readTime}
        </span>
      </div>
      <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-6 leading-tight font-['Nunito'] text-white">
        {post.data.title}
      </h1>
      <div class="flex items-center gap-4 text-blue-200 text-sm">
        <span>
          <i class="fa-solid fa-user mr-2"></i>{post.data.author}
        </span>
        <span>
          <i class="fa-solid fa-calendar mr-2"></i>
          {post.data.pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
        </span>
      </div>
    </div>
  </header>

  <!-- Article Content -->
  <article class="py-16 bg-white">
    <div class="max-w-3xl mx-auto px-4">
      <div class="prose prose-lg max-w-none
        prose-headings:font-bold prose-headings:text-[#1E3A5F] prose-headings:font-['Nunito']
        prose-h2:text-2xl prose-h2:mt-12 prose-h2:mb-4
        prose-h3:text-xl prose-h3:mt-8 prose-h3:mb-3
        prose-p:text-[#4B5563] prose-p:leading-relaxed prose-p:mb-4
        prose-a:text-[#10B981] prose-a:no-underline hover:prose-a:underline
        prose-strong:text-[#1E3A5F]
        prose-code:bg-gray-100 prose-code:px-1 prose-code:py-0.5 prose-code:rounded prose-code:text-[#10B981]
        prose-pre:bg-[#1E3A5F] prose-pre:text-gray-100
        prose-ul:text-[#4B5563] prose-ol:text-[#4B5563]
        prose-li:my-1
        prose-blockquote:border-l-4 prose-blockquote:border-[#10B981] prose-blockquote:bg-gray-50 prose-blockquote:py-2 prose-blockquote:px-4 prose-blockquote:italic">
        <Content />
      </div>
    </div>
  </article>

  <!-- Author/Share Section -->
  <section class="py-12 bg-[#F3F4F6]">
    <div class="max-w-3xl mx-auto px-4">
      <div class="flex flex-col md:flex-row md:items-center justify-between gap-6">
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 bg-[#1E3A5F] rounded-full flex items-center justify-center">
            <i class="fa-solid fa-graduation-cap text-[#10B981]"></i>
          </div>
          <div>
            <p class="font-bold text-[#1E3A5F] font-['Nunito']">CoursePicked</p>
            <p class="text-sm text-gray-500">Learn smarter, not harder.</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
