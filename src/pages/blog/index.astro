---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get all blog posts and sort by date
const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

// Category colors
const categoryColors: Record<string, string> = {
  reviews: 'bg-[#10B981]',
  comparisons: 'bg-[#3B82F6]',
  guides: 'bg-[#8B5CF6]'
};
---

<Layout title="Blog | CoursePicked" description="Honest course reviews and learning guides to help you learn smarter, not harder.">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-[#1E3A5F] to-[#2d4a6f] text-white py-16">
    <div class="max-w-6xl mx-auto px-4">
      <div class="flex items-center gap-3 mb-4">
        <span class="bg-[#10B981]/20 text-[#10B981] text-sm font-semibold px-4 py-1 rounded-full">
          <i class="fa-solid fa-newspaper mr-2"></i>blog
        </span>
      </div>
      <h1 class="text-4xl md:text-5xl font-bold mb-4 font-['Nunito'] text-white">Latest Articles</h1>
      <p class="text-xl text-blue-100 max-w-2xl">
        Honest reviews, practical guides, and real talk about online learning. Learn smarter, not harder.
      </p>
    </div>
  </section>

  <!-- Blog Posts -->
  <section class="py-16 bg-[#F9FAFB]">
    <div class="max-w-6xl mx-auto px-4">
      {posts.length === 0 ? (
        <div class="text-center py-16">
          <i class="fa-solid fa-graduation-cap text-6xl text-gray-300 mb-4"></i>
          <p class="text-gray-500">No articles yet. Check back soon!</p>
        </div>
      ) : (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {posts.map((post) => (
            <article class="bg-white rounded-2xl overflow-hidden hover:shadow-xl transition-shadow border border-gray-100 group">
              <div class="relative h-40 bg-gradient-to-br from-[#1E3A5F] to-[#2d4a6f] flex items-center justify-center">
                <i class="fa-solid fa-graduation-cap text-5xl text-[#10B981]/30"></i>
                <div class="absolute top-4 left-4 flex items-center gap-2">
                  <span class={`${categoryColors[post.data.category] || 'bg-[#10B981]'} text-white text-xs px-3 py-1 rounded-full font-semibold capitalize`}>
                    {post.data.category}
                  </span>
                  <span class="text-xs text-blue-200">
                    <i class="fa-regular fa-clock mr-1"></i>{post.data.readTime}
                  </span>
                </div>
              </div>
              <div class="p-6">
                <time class="text-xs text-gray-400 mb-2 block">
                  {post.data.pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })}
                </time>
                <h3 class="text-lg font-bold text-[#1E3A5F] mb-2 group-hover:text-[#10B981] transition-colors line-clamp-2 font-['Nunito']">
                  {post.data.title}
                </h3>
                <p class="text-[#4B5563] text-sm mb-4 line-clamp-2">
                  {post.data.description}
                </p>
                <a href={`/blog/${post.slug}`} class="text-[#10B981] font-semibold text-sm hover:underline flex items-center gap-2">
                  Read Article <i class="fa-solid fa-arrow-right"></i>
                </a>
              </div>
            </article>
          ))}
        </div>
      )}
    </div>
  </section>
</Layout>
