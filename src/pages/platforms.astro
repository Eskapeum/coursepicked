---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get all blog posts and filter for platforms
const allPosts = await getCollection('blog');
const platformPosts = allPosts.filter(post =>
  post.data.category === 'platforms' ||
  post.data.title.toLowerCase().includes('coursera') ||
  post.data.title.toLowerCase().includes('udemy') ||
  post.data.title.toLowerCase().includes('edx') ||
  post.data.title.toLowerCase().includes('skillshare') ||
  post.data.title.toLowerCase().includes('linkedin learning') ||
  post.data.title.toLowerCase().includes('udacity')
).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<Layout title="Learning Platforms" description="Complete directory of online learning platforms. Find the right platform for your learning goals.">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-[#1E3A5F] to-[#2d4a6f] text-white py-16">
    <div class="max-w-6xl mx-auto px-4">
      <div class="flex items-center gap-3 mb-4">
        <span class="bg-[#10B981]/20 text-[#10B981] text-sm font-semibold px-4 py-1 rounded-full">
          <i class="fa-solid fa-graduation-cap mr-2"></i>platforms
        </span>
      </div>
      <h1 class="text-4xl md:text-5xl font-bold mb-4 font-['Nunito'] text-white">Learning Platforms</h1>
      <p class="text-xl text-blue-100 max-w-2xl">
        Find the perfect platform for your learning style. We've tested them all so you can pick with confidence.
      </p>
    </div>
  </section>

  <!-- Platforms Grid -->
  <section class="py-16">
    <div class="max-w-6xl mx-auto px-4">
      {platformPosts.length > 0 ? (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {platformPosts.map((post) => (
            <a href={`/blog/${post.slug}`} class="bg-white rounded-2xl overflow-hidden hover:shadow-xl transition-all border border-gray-100 group">
              <div class="relative h-48 bg-gradient-to-br from-[#8B5CF6] to-[#7C3AED] flex items-center justify-center">
                <i class="fa-solid fa-graduation-cap text-6xl text-white/20"></i>
              </div>
              <div class="p-6">
                <div class="flex items-center gap-2 text-sm text-[#6B7280] mb-3">
                  <span class="bg-[#8B5CF6]/10 text-[#8B5CF6] px-3 py-1 rounded-full font-semibold capitalize">
                    {post.data.category}
                  </span>
                  <span><i class="fa-regular fa-clock mr-1"></i>{post.data.readTime}</span>
                </div>
                <h3 class="text-xl font-bold text-[#1E3A5F] mb-3 font-['Nunito'] group-hover:text-[#10B981] transition-colors line-clamp-2">
                  {post.data.title}
                </h3>
                <p class="text-[#6B7280] mb-4 line-clamp-2">
                  {post.data.description}
                </p>
                <div class="flex items-center justify-between text-sm">
                  <span class="text-gray-400">
                    {post.data.pubDate.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}
                  </span>
                  <span class="text-[#10B981] font-semibold flex items-center gap-1 group-hover:gap-2 transition-all">
                    View Platform <i class="fa-solid fa-arrow-right text-xs"></i>
                  </span>
                </div>
              </div>
            </a>
          ))}
        </div>
      ) : (
        <div class="text-center py-16">
          <div class="w-24 h-24 bg-[#8B5CF6]/10 rounded-full flex items-center justify-center mx-auto mb-6">
            <i class="fa-solid fa-graduation-cap text-4xl text-[#8B5CF6]"></i>
          </div>
          <h3 class="text-2xl font-bold text-[#1E3A5F] mb-2 font-['Nunito']">Coming Soon!</h3>
          <p class="text-[#6B7280] max-w-md mx-auto">
            We're reviewing more learning platforms. Check back soon for comprehensive platform guides!
          </p>
          <a href="/blog" class="inline-flex items-center gap-2 mt-6 text-[#10B981] font-semibold hover:underline">
            <i class="fa-solid fa-arrow-left"></i> Browse All Articles
          </a>
        </div>
      )}
    </div>
  </section>
</Layout>
