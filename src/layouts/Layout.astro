---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Your trusted guide for online courses and certifications. Honest reviews, platform comparisons, and learning paths to help you learn smarter, not harder." } = Astro.props;
const currentYear = new Date().getFullYear();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="keywords" content="online courses, course reviews, coursera, udemy, skillshare, linkedin learning, certifications, e-learning" />
    <meta name="author" content="CoursePicked" />
    <meta property="og:title" content={`${title} | CoursePicked`} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="/images/og-image.svg" />
    <meta name="twitter:card" content="summary_large_image" />
    <link rel="icon" type="image/svg+xml" href="/images/logo.svg" />
    <link rel="canonical" href="https://coursepicked.com" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700;800&family=Open+Sans:wght@400;500;600&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>{title} | CoursePicked</title>
  </head>
  <body class="bg-white text-[#4B5563] min-h-screen flex flex-col font-['Open_Sans']">
    <!-- Top Bar -->
    <div class="bg-[#1E3A5F] text-white py-2 text-sm">
      <div class="max-w-6xl mx-auto px-4 flex justify-between items-center">
        <span class="hidden sm:inline"><i class="fa-solid fa-envelope mr-2"></i>hello@coursepicked.com</span>
      </div>
    </div>

    <!-- Header -->
    <header class="border-b border-gray-100 bg-white sticky top-0 z-50 shadow-sm">
      <nav class="max-w-6xl mx-auto px-4 py-4 flex items-center justify-between">
        <a href="/" class="flex items-center">
          <img src="/images/logo.png" alt="CoursePicked" class="h-10 md:h-12 w-auto" />
        </a>

        <!-- Desktop Navigation -->
        <div class="hidden md:flex items-center gap-8">
          <a href="/reviews" class="font-medium hover:text-[#10B981] transition-colors flex items-center gap-2">
            <i class="fa-solid fa-star text-sm"></i> Reviews
          </a>
          <a href="/comparisons" class="font-medium hover:text-[#10B981] transition-colors flex items-center gap-2">
            <i class="fa-solid fa-scale-balanced text-sm"></i> Comparisons
          </a>
          <a href="/learning-paths" class="font-medium hover:text-[#10B981] transition-colors flex items-center gap-2">
            <i class="fa-solid fa-route text-sm"></i> Learning Paths
          </a>
          <a href="/platforms" class="font-medium hover:text-[#10B981] transition-colors flex items-center gap-2">
            <i class="fa-solid fa-graduation-cap text-sm"></i> Platforms
          </a>
          <a href="/about" class="font-medium hover:text-[#10B981] transition-colors">About</a>
        </div>

        <!-- Mobile Menu Button -->
        <button id="mobile-menu-btn" class="md:hidden p-2 text-[#1E3A5F]" aria-label="Toggle menu">
          <i class="fa-solid fa-bars text-xl"></i>
        </button>
      </nav>

      <!-- Mobile Navigation -->
      <div id="mobile-menu" class="hidden md:hidden bg-white border-t border-gray-100 px-4 py-4">
        <div class="flex flex-col gap-4">
          <a href="/reviews" class="font-medium hover:text-[#10B981] py-2"><i class="fa-solid fa-star mr-2"></i>Reviews</a>
          <a href="/comparisons" class="font-medium hover:text-[#10B981] py-2"><i class="fa-solid fa-scale-balanced mr-2"></i>Comparisons</a>
          <a href="/learning-paths" class="font-medium hover:text-[#10B981] py-2"><i class="fa-solid fa-route mr-2"></i>Learning Paths</a>
          <a href="/platforms" class="font-medium hover:text-[#10B981] py-2"><i class="fa-solid fa-graduation-cap mr-2"></i>Platforms</a>
          <a href="/about" class="font-medium hover:text-[#10B981] py-2"><i class="fa-solid fa-users mr-2"></i>About</a>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="flex-1">
      <slot />
    </main>

    <!-- Pre-Footer CTA -->
    <section class="bg-gradient-to-r from-[#1E3A5F] to-[#2d4a6f] py-12">
      <div class="max-w-4xl mx-auto px-4 text-center">
        <h2 class="text-2xl md:text-3xl font-bold text-white mb-4 font-['Nunito']">Never Waste Money on the Wrong Course Again</h2>
        <p class="text-blue-100 mb-6 text-lg">Find your next course with honest reviews and recommendations.</p>
        <a href="/reviews" class="inline-flex items-center gap-2 bg-[#10B981] hover:bg-[#059669] text-white px-8 py-3 rounded-lg font-semibold transition-colors">
          <i class="fa-solid fa-search"></i> Browse Reviews
        </a>
      </div>
    </section>

    <!-- Footer -->
    <footer class="bg-[#1E3A5F] text-white">
      <div class="max-w-6xl mx-auto px-4 py-12">
        <div class="grid md:grid-cols-2 lg:grid-cols-5 gap-8">
          <!-- Brand Column -->
          <div class="lg:col-span-2">
            <div class="mb-4">
              <img src="/images/logo.png" alt="CoursePicked" class="h-12 w-auto" />
            </div>
            <p class="text-blue-100 text-sm mb-4 leading-relaxed">Learn smarter, not harder. We're your trusted friend who's already taken the course. Honest reviews, no fluff.</p>
            <p class="text-blue-200 text-sm"><i class="fa-solid fa-envelope mr-2"></i>hello@coursepicked.com</p>
          </div>

          <!-- Categories -->
          <div>
            <h4 class="font-semibold text-white mb-4 font-['Nunito']">Categories</h4>
            <ul class="space-y-3 text-sm text-blue-100">
              <li><a href="/category/coding" class="hover:text-[#10B981] transition-colors"><i class="fa-solid fa-code mr-2 w-4"></i>Coding</a></li>
              <li><a href="/category/business" class="hover:text-[#10B981] transition-colors"><i class="fa-solid fa-briefcase mr-2 w-4"></i>Business</a></li>
              <li><a href="/category/design" class="hover:text-[#10B981] transition-colors"><i class="fa-solid fa-palette mr-2 w-4"></i>Design</a></li>
              <li><a href="/category/marketing" class="hover:text-[#10B981] transition-colors"><i class="fa-solid fa-bullhorn mr-2 w-4"></i>Marketing</a></li>
              <li><a href="/category/data-science" class="hover:text-[#10B981] transition-colors"><i class="fa-solid fa-chart-line mr-2 w-4"></i>Data Science</a></li>
            </ul>
          </div>

          <!-- Platforms -->
          <div>
            <h4 class="font-semibold text-white mb-4 font-['Nunito']">Platforms</h4>
            <ul class="space-y-3 text-sm text-blue-100">
              <li><a href="/platform/coursera" class="hover:text-[#10B981] transition-colors">Coursera</a></li>
              <li><a href="/platform/udemy" class="hover:text-[#10B981] transition-colors">Udemy</a></li>
              <li><a href="/platform/skillshare" class="hover:text-[#10B981] transition-colors">Skillshare</a></li>
              <li><a href="/platform/linkedin-learning" class="hover:text-[#10B981] transition-colors">LinkedIn Learning</a></li>
              <li><a href="/platform/edx" class="hover:text-[#10B981] transition-colors">edX</a></li>
            </ul>
          </div>

          <!-- Company -->
          <div>
            <h4 class="font-semibold text-white mb-4 font-['Nunito']">Company</h4>
            <ul class="space-y-3 text-sm text-blue-100">
              <li><a href="/about" class="hover:text-[#10B981] transition-colors">About Us</a></li>
              <li><a href="/methodology" class="hover:text-[#10B981] transition-colors">Our Methodology</a></li>
              <li><a href="/contact" class="hover:text-[#10B981] transition-colors">Contact</a></li>
              <li><a href="/privacy" class="hover:text-[#10B981] transition-colors">Privacy Policy</a></li>
              <li><a href="/terms" class="hover:text-[#10B981] transition-colors">Terms of Service</a></li>
            </ul>
          </div>
        </div>

        <div class="border-t border-blue-800 mt-10 pt-8 flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-blue-200">
          <div class="flex flex-col sm:flex-row items-center gap-2">
            <p>&copy; {currentYear} CoursePicked. All rights reserved.</p>
            <span class="hidden sm:inline text-blue-400">|</span>
            <p class="text-xs opacity-70">A <span class="text-[#10B981]">S2F Affiliates</span> brand</p>
          </div>
          <p class="flex items-center gap-2">
            <i class="fa-solid fa-shield-halved text-[#10B981]"></i>
            Affiliate Disclosure: We may earn commissions from qualifying purchases.
          </p>
        </div>
      </div>
    </footer>

    <script>
      const menuBtn = document.getElementById('mobile-menu-btn');
      const mobileMenu = document.getElementById('mobile-menu');

      menuBtn?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
        const icon = menuBtn.querySelector('i');
        if (icon) {
          icon.classList.toggle('fa-bars');
          icon.classList.toggle('fa-xmark');
        }
      });
    </script>
  </body>
</html>
